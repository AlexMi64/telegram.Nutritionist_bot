# Eat_bot Environment Configuration Template
# Скопируйте этот файл в .env и заполните реальными значениями

# ==============
# BOT CONFIG
# ==============
# Telegram Bot Token от @BotFather (https://t.me/BotFather)
# Формат: 123456:ABCdefGHijklMNopqrsTUVwxyz123456...
BOT_TOKEN=ваш_бот_токен_от_BotFather

# ==============
# AI CONFIG
# ==============
# OpenRouter API Key (бесплатно, https://openrouter.ai)
OPENAI_API_KEY=sk-or-v1-token_here

# OpenRouter Base URL (не менять)
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# AI Model для анализа еды
OPENAI_MODEL=gpt-3.5-turbo-1106

# AI Model для анализа фото (когда будет подключено)
OPENAI_VISION_MODEL=gpt-4-vision-preview

# ==============
# DATABASE CONFIG
# ==============
# SQLite путь к базе данных
DATABASE_URL=sqlite:///./eat_bot.db

# Альтернативно PostgreSQL для production:
# DATABASE_URL=postgresql://username:password@localhost:5432/eat_bot

# ==============
# ENVIRONMENT CONFIG
# ==============
# Режим работы: development, production
NODE_ENV=development

# Порт для webhook (если используется webhook mode)
WEBHOOK_PORT=3000

# Webhook URL для production (опционально)
# Формат: https://your-domain.com/bot
WEBHOOK_URL=

# ==============
# ADVANCED CONFIG
# ==============

# Уровень логирования: error, warn, info, debug
LOG_LEVEL=info

# Максимальное количество пользователей для бесплатной версии
MAX_USERS=1000

# Ограничения на запросы
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=15

# Планировщик уведомлений
MORNING_REMINDER_HOUR=7
MIDDAY_REMINDER_HOUR=12
EVENING_REMINDER_HOUR=19

# Дополнительные уведомления (каждые X часов)
ADDITIONAL_REMINDER_INTERVAL_HOURS=4

# Таймзона для планировщика (по умолчанию Moscow)
TIMEZONE=Europe/Moscow

# Максимальный размер фото для анализа (в байтах)
MAX_PHOTO_SIZE_BYTES=5242880

# Таймауты для AI API (в миллисекундах)
AI_REQUEST_TIMEOUT_MS=30000
AI_RETRY_ATTEMPTS=3

# База данных
DB_POOL_MAX=5
DB_POOL_MIN=1
DB_ACQUIRE_TIMEOUT=60000
DB_IDLE_TIMEOUT=10000

# ==============
# MONITORING & ANALYTICS
# ==============
# Sentry для error tracking (опционально)
SENTRY_DSN=

# Google Analytics или аналог (опционально)
ANALYTICS_TRACKING_ID=

# ==============
# DEVELOPMENT CONFIG
# ==============
# Включить дебаг логи (только для development)
DEBUG_MODE=true

# Порт для debugging (если используется)
DEBUG_PORT=9229

# ==============
# SECURITY
# ==============
# JWT Secret для admin API (если будет)
JWT_SECRET=your_super_secret_jwt_key_32_chars

# Разрешенные origins для CORS (для API)
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
